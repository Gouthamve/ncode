<style>
#customers {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    width: 100%;
    border-collapse: collapse;
}

#customers td, #customers th {
    font-size: 1em;
    border: 1px solid #98bf21;
    padding: 3px 7px 2px 7px;
}

#customers th {
    font-size: 1.1em;
    text-align: left;
    padding-top: 5px;
    padding-bottom: 4px;
    background-color: #A7C942;
    color: #ffffff;
}

#customers tr.alt td {
    color: #000000;
    background-color: #EAF2D3;
}
</style>

<table id="customers">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>NvisionID</th>
  </tr>
	{{#each people}}
  <tr>
		{{#if facebook}}
	    <td>{{facebook.displayName}}</td>
	    <td>{{facebook.email}}</td>
	    <td>{{nvisionId}}</td>
		{{else}}
			<td>{{google.displayName}}</td>
			<td>{{google.email}}</td>
			<td>{{nvisionId}}</td>
		{{/if}}
  </tr>
	{{/each}}
</table>
